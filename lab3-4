#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main()
{
	int i,j,l,m;
	float tab[100],war=0,sr=0,br;
	float min, max, k=0;
	srand(time(NULL));
	for (i=0; i<100; i++)
	{
		tab[i]=(1.0*rand()/RAND_MAX);
	}
	min=tab[0];
	max=tab[0];
	for (i=1; i<100; i++)
	{
		if (min>tab[i])
		{
			min=tab[i];
			l=i+1;
		}
		if (max<tab[i])
		{
			max=tab[i];
			m=i+1;
		}
	}
	printf("Najmniejsza liczba = %f\n",min);
	printf("NajwiÄ™ksza liczba = %f\n",max);
	printf("\n\nHistogram:\n\nLp	Wartosc tablicy			Histogram\n");
		for (i=0; i<100; i++)
	{
		printf("%d	%f	",i+1,tab[i]);
		for (j=0; j<19; j++)
		{
			if (tab[i]>k) printf("*");
			k=k+0.05;
		}
		k=0; 
		printf("\n");
	}
	return 0;
}
